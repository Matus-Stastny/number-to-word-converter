{
    "name": "number-to-word-converter",
    "license": "MIT",
    "version": "0.1.0",
    "description": "Simple React-Node app for converting numbers to words in style of T9",
    "scripts": {
        "client": "cd client && yarn start",
        "server": "nodemon server.js",
        "test": "yarn run jest test/**.test.js",
        "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
    },
    "dependencies": {
        "express": "^4.16.2",
        "lodash": "^4.17.10"
    },
    "devDependencies": {
        "concurrently": "^3.5.0",
        "eslint": "^5.2.0",
        "eslint-plugin-react": "^7.10.0",
        "jest": "^23.4.2",
        "nodemon": "^1.18.3",
        "prettier-standard": "^8.0.1"
    },
    "jest": {
        "testURL": "http://localhost/"
    }
}
